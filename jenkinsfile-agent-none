pipeline {
    agent none 

    stages {
        stage ('build') {
            agent {
                label 'slave1'
            }
                    steps {
                     echo "this is from slave1"
                     sh 'sleep 5'
        }
        }

        stage ('test') {
            agent {
                label 'slave2'
            }
                    steps {
                     echo "this is from slave"
                     sh 'sleep 5'
                    }
        }
        

        stage ('deploy') {
            agent {
                label 'Built-In Node'
            }
            steps {
                sh 'sleep 5'

            }
            
        }
    }
}
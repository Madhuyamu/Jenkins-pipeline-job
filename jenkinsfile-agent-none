pipeline {
    agent none 

    stages {
        stage ('build') {
            agent {
                label 'slave1 slave2'
                    steps {
                     echo "this is from slave1"
            }
        }
        }

        stage ('test') {
            agent {
                label 'slave2 slave1'
                    steps {
                     echo "this is from slave"
            }
        }
        }

        stage ('deploy') {
            when {
                branch 'main'
            }
            steps {
                sh 'sleep 5'

            }
            
        }
    }
}